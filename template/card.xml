<?xml version="1.0" encoding="UTF-8"?>
<magicpwd>
    <base>
        <name>测试卡片</name>
        <type>htm/txt/png/svg/*</type>
    </base>
    <!--txt-->
    <card>
        <template-uri></template-uri>
    </card>
    <!--htm-->
    <card>
        <template-uri></template-uri>
        <template-res></template-res>
    </card>
    <!--png-->
    <card>
        <base width="400" height="240" background-color="#FFFFFF" background-image="demo.png" background-image-style="repeat/stretch/scale/fixed" />
        <!--
        说明：
            1、坐标及长宽均以像素为单位；
            2、jiao du
            3、字体风格：0表示正常，1表示粗体，2表示斜体，3表示粗斜休；
            4、draw元素中除method属性必需外，其它均可省略；
        -->
        <draw method="text" x="1" y="1" color="#0000FF" font-name="Dialog" font-size="12" font-style="0">固定文本 #可替换文本#</draw>
        <draw method="image" x="1" y="1" width="16" height="16" />
        <draw method="line" x1="1" y1="1" x2="100" y2="1" width="2" color="#FF0000" />
        <draw method="rect" x="1" y="1" width="" height="" color="" border-color="" border-width="" />
        <draw method="round-rect" x="1" y="1" width="" height="" arc-width="" arc-height="" color="" border-color="" border-width="" />
        <draw method="arc" x="1" y="1" width="1" height="1" start-angle="0" arc-angle="0" color="" border-color="" border-width="" />
        <draw method="polygon" x-array="1,2,3,4" y-array="1,1,1,1" color="" border-color="" border-width="" />
    </card>
    <!--svg-->
    <card>
        <template-uri></template-uri>
    </card>
</magicpwd>